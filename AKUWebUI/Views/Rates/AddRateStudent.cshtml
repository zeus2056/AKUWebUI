@using EntityLayer.Entities

@{
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model CreateRateStudentModel

<div class="card" style="background: #fff">
	<div class="card-header">
		<h5 class="card-title text-dark">Add Rate Student</h5>
	</div>
	<div class="card-body">
		<div asp-validation-summary="ModelOnly" class="text-info"></div>
		<form class="forms-sample" method="post" asp-action="AddRateStudent" asp-controller="Rates">
			<input type="hidden" asp-for="@Model.RateId" />
			<div class="form-group">
				<select asp-for="StudentId" class="form-select">
					<option value="0" disabled selected>Öğrenci Seçiniz...</option>
					@if (ViewBag.RateStudents != null)
					{
						@foreach (var item in ViewBag.RateStudents as List<Student>)
						{
							<option value="@item.StudentId">@item.Name @item.Surname</option>
						}
					}
				</select>
				<span class="text-info" asp-validation-for="StudentId"></span>
			</div>
			<div class="form-group">
				<select class="form-select" asp-for="DiscountId">
					<option value="-1" disabled selected>İndirim Oranı Seçiniz...</option>
					@foreach(var item in ViewBag.Discounts as List<DiscountRate>)
					{
						<option value="@item.DiscountRateId">@item.DiscountRates</option>
					}
				</select>
				<span class="text-info" asp-validation-for="DiscountId"></span>
			</div>
			<div class="form-group">
				<button class="btn btn-warning w-100 text-center">
					<i class="fa fa-plus"></i>
					<span>Öğrenci Ekle</span>
				</button>
			</div>
		</form>
	</div>

	@section Scripts{
		<partial name="~/Views/Shared/validation.cshtml"></partial>
	}
</div>