@using EntityLayer.Entities

@{
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model CreateRateModel

<div class="card" style="background: #fff">
	<div class="card-header">
		<h5 class="card-title text-dark">Create Rate</h5>
	</div>
	<div class="card-body">
		<div asp-validation-summary="ModelOnly" class="text-info"></div>
		<form class="forms-sample" method="post" asp-action="CreateRate" asp-controller="Rates">
			<div class="row">
				<div class="col-md-6">
					<div class="form-group">
						<label class="form-label" asp-for="RateName">Kur Adı</label>
						<input type="text" placeholder="Rate Name" asp-for="RateName" class="form-control" />
						<span asp-validation-for="RateName" class="text-info mt-2"></span>
					</div>
				</div>
				<div class="col-md-6">
					<div class="form-group">
						<label class="form-label" asp-for="RateDate">Kur Saati</label>
						<input type="number" placeholder="Rate Date..." asp-for="RateDate" class="form-control" min="1"/>
						<span asp-validation-for="RateDate" class="text-info mt-2"></span>
					</div>
				</div>
			</div>
			<div class="row">
				<div class="col-md-6">
					<div class="form-group">
						<label class="form-label" asp-for="RateStartDate">Kur Başlama Tarihi</label>
						<input type="date"  asp-for="RateStartDate" class="form-control" />
						<span asp-validation-for="RateStartDate" class="text-info mt-2"></span>
					</div>
				</div>
				<div class="col-md-6">
					<div class="form-group">
						<label class="form-label" asp-for="RatePrice">Kur Fiyatı</label>
						<input type="number" asp-for="RatePrice" class="form-control" placeholder="Rate Price..." min="1" />
						<span asp-validation-for="RatePrice" class="text-info mt-2"></span>
					</div>
				</div>
			</div>
			<div class="row">
				<div class="col-md-6">
					<div class="form-group">
						<label class="form-label" asp-for="AgeGroupId">Yaş Grubu</label>
						<select class="form-select" asp-for="AgeGroupId">
							<option value="0" disabled selected>Age Group...</option>
							@foreach(var item in ViewBag.AgeGroups as List<AgeGroup>)
							{
								<option value="@item.AgeGroupId">@item.Name</option>
							}
						</select>
					</div>
				</div>
				<div class="col-md-6">
					<div class="form-group">
						<label class="form-label" asp-for="Description">Açıklama</label>
						<textarea class="form-control" asp-for="Description" placeholder="Kur Açıklaması..."></textarea>
						<span class="text-danger" asp-validation-for="Description"></span>
					</div>
				</div>
				@if(ViewBag.Branchs != null)
				{
					<div class="col-md-6">
					<div class="form-group">
						<label class="form-label" asp-for="BranchId">Şube</label>
						<select class="form-select" asp-for="BranchId">
							<option value="0" disabled selected>Branch...</option>
							@foreach (var item in ViewBag.Branchs as List<Branch>)
							{
								<option value="@item.BranchId">@item.BranchName</option>
							}
						</select>
					</div>
				</div>
				}
			</div>
			<div class="form-group">
				<button class="btn btn-warning w-100 text-center">
					<i class="fa fa-plus"></i>
					<span>Kur Oluştur</span>
				</button>
			</div>
		</form>
	</div>

	@section Scripts{
		<partial name="~/Views/Shared/validation.cshtml"></partial>
	}
</div>