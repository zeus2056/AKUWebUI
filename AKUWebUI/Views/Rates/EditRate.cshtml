@using EntityLayer.Entities

@{
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model EditRateModel

<div class="card" style="background: #fff">
	<div class="card-header">
		<h5 class="card-title text-dark">Edit Rate</h5>
	</div>
	<div class="card-body">
		<div asp-validation-summary="ModelOnly" class="text-info"></div>
		<form class="forms-sample" method="post" asp-action="EditRate" asp-controller="Rates">
			<input type="hidden" asp-for="RateId"/>
			<div class="row">
				<div class="col-md-6">
					<div class="form-group">
						<label class="form-label" asp-for="RateName">Kur Adı</label>
						<input type="text" placeholder="Rate Name" asp-for="RateName" class="form-control" />
						<span asp-validation-for="RateName" class="text-info mt-2"></span>
					</div>
				</div>
				<div class="col-md-6">
					<div class="form-group">
						<label class="form-label" asp-for="RateDate">Kur Saat Süresi</label>
						<input type="number" placeholder="Rate Date..." asp-for="RateDate" class="form-control" min="1" />
						<span asp-validation-for="RateDate" class="text-info mt-2"></span>
					</div>
				</div>
			</div>
			<div class="row">
				<div class="col-md-6">
					<div class="form-group">
						<label class="form-label" asp-for="RateStartDate"></label>
						<input type="date" asp-for="RateStartDate" class="form-control" />
						<span asp-validation-for="RateStartDate" class="text-info mt-2"></span>
					</div>
				</div>
				<div class="col-md-6">
					<div class="form-group">
						<label class="form-label" asp-for="RatePrice">Kur Fiyatı</label>
						<input type="number" asp-for="RatePrice" class="form-control" placeholder="Rate Price..." min="1" />
						<span asp-validation-for="RatePrice" class="text-info mt-2"></span>
					</div>
				</div>
			</div>
			<div class="row">
				<div class="col-md-6">
					<label class="form-label" asp-for="Description">Kur Açıklaması</label>
					<textarea class="form-control" asp-for="Description" placeholder="Kur Açıklaması">
						
					</textarea>
				</div>
				<div class="col-md-6">
					<div class="form-group">
						<select class="form-select" asp-for="AgeGroupId">
							<option value="0" disabled selected>Yaş Grubu Seçiniz...</option>
							@foreach (var item in ViewBag.AgeGroups as List<AgeGroup>)
							{
								<option value="@item.AgeGroupId">@item.Name</option>
							}
						</select>
						<span class="text-info" asp-validation-for="AgeGroupId"></span>
					</div>
				</div>
			</div>
			<div class="form-group">
				<button class="btn btn-warning w-100 text-center">
					<i class="fa fa-edit"></i>
					<span>Kur Güncelle</span>
				</button>
			</div>
		</form>
	</div>

	@section Scripts{
		<partial name="~/Views/Shared/validation.cshtml"></partial>
	}
</div>