@{
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model CreatePaymentTypeModel

<div class="card" style="background: #fff">
	<div class="card-header">
		<h5 class="card-title text-dark">Ödeme Tipi Ekle</h5>
	</div>
	<div class="card-body">
		<div class="text-info" asp-validation-summary="ModelOnly"></div>
		<form class="forms-sample" method="post" asp-action="CreatePaymentType" asp-controller="PaymentTypes">
			<div class="form-group">
				<input type="text" placeholder="Ödeme Tipi Adı..." asp-for="PaymentTypeName" class="form-control" />
				<span asp-validation-for="PaymentTypeName" class="text-info mt-2"></span>
			</div>
			<div class="form-group">
				<button class="btn btn-warning w-100 text-center">
					<i class="fa fa-plus"></i>
					<span>Ödeme Tipi Ekle</span>
				</button>
			</div>
		</form>
	</div>
</div>

@section Scripts{
	<partial name="~/Views/Shared/validation.cshtml"></partial>
}