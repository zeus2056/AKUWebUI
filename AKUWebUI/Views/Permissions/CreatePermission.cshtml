@{
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model CreatePermissionModel

<div class="card" style="background: #fff">
	<div class="card-header">
		<h5 class="card-title text-dark">İzin Ekle</h5>
	</div>
	<div class="card-body">
		<form class="forms-sample" method="post" asp-action="CreatePermission" asp-controller="Permissions">
			<div class="text-info" asp-validation-summary="ModelOnly"></div>
			<div class="form-group">
				<label class="form-label" asp-for="Name">İzin Adı </label>
				<input type="text" placeholder="İzin Adı" asp-for="Name" class="form-control" />
				<span asp-validation-for="Name" class="text-info mt-2"></span>
			</div>
			<div class="form-group">
				<label class="form-label" asp-for="DayCount">İzin Hakkı Sayısı</label>
				<input type="number" asp-for="DayCount" class="form-control" min="1" max="100" value="1" step="1" />
				<span asp-validation-for="DayCount" class="text-info mt-2"></span>
			</div>
			<div class="form-group">
				<label class="form-label" asp-for="YearCount">Kaç Yıllık Çalışan </label>
				<input type="number" asp-for="YearCount" class="form-control" min="1" max="100" value="1" step="1" />
				<span asp-validation-for="YearCount" class="text-info mt-2"></span>
			</div>
			<div class="form-group">
				<button class="btn btn-warning w-100 text-center">
					<i class="fa fa-plus"></i>
					<span>İzin Ekle</span>
				</button>
			</div>
		</form>
	</div>
</div>

@section Scripts{
	<partial name="~/Views/Shared/validation.cshtml"></partial>
}