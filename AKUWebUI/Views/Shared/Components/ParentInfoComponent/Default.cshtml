@using EntityLayer.Entities;
@model List<Parent>
@if(Model.Count > 0){
	@foreach(var item in Model)
	{
		<div class="card text-dark" style="background: #fff">
			<div class="card-header">
				<h5 class="card-title text-dark text-center">Parent Info</h5>
			</div>
			<div class="card-body">
				<div class="row mb-2 mb-md-0">
					<div class="col-md-6">
						<div class="row">
							<div class="col-md-3">İsim : </div>
							<div class="col-md-9">@item.Name</div>
						</div>
					</div>
					<div class="col-md-6  ">
						<div class="row">
							<div class="col-md-3">Soyisim : </div>
							<div class="col-md-9">@item.Surname</div>
						</div>
					</div>
				</div>
				<div class="row mb-2 mb-md-0">
					<div class="col-md-6">
						<div class="row">
							<div class="col-md-3">TC : </div>
							<div class="col-md-9">@item.TC</div>
						</div>
					</div>
					<div class="col-md-6">
						<div class="row">
							<div class="col-md-3">Telefon : </div>
							<div class="col-md-9">@item.PhoneNumber</div>
						</div>
					</div>
				</div>
				<div class="row mb-2 mb-md-0">
					<div class="col-md-6">
						<div class="row">
							<div class="col-md-3">Mail : </div>
							<div class="col-md-9">@item.Mail</div>
						</div>
					</div>
					<div class="col-md-6">
						<div class="row">
							<div class="col-md-3">İş : </div>
							<div class="col-md-9">@item.Job</div>
						</div>
					</div>
				</div>
				<div class="row mb-2 mb-md-0">
					<div class="col-md-6">
						<div class="row">
							<div class="col-md-3">Veli Tipi : </div>
							<div class="col-md-9">@item.ParentType.ToString()</div>
						</div>
					</div>
				</div>
				@if (ViewBag.Role)
				{
					<div class="row mb-2 mb-md-0 mt-2">
						<div class="col-md-6">
							@if (ViewBag.Role)
							{
								<div class="col-md-6">
									<a class="btn btn-danger w-100 text-center" asp-action="DeleteParent" asp-controller="Parents" asp-route-slug="@item.Slug">Veli Sil</a>
								</div>
							}
						</div>
						<div class="col-md-6">
							@if (ViewBag.Role)
							{
								<div class="col-md-6">
									<a class="btn btn-info w-100 text-center" asp-action="EditParent" asp-controller="Parents" asp-route-slug="@item.Slug">Veli Güncelle</a>
								</div>
							}
						</div>
					</div>
				}
			</div>
		</div>
	}
}
else{
	<div class="alert alert-info mt-3">
		Listelenecek Veli Yok...
	</div>
}