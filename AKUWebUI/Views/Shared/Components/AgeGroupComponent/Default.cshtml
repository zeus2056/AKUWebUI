@using EntityLayer.Entities;
@model List<AgeGroup>

<div class="form-group">
	<label class="form-label">Yaş Grubu</label>
	<select name="AgeGroupId" class="form-select">
		<option value="0" disabled selected>Yaş Grubu Seçiniz...</option>
		@foreach(var item in Model)
		{
			if(item.AgeGroupId == ViewBag.Selected)
			{
				<option value="@item.AgeGroupId" selected>@item.Name</option>
			}
			else
			{
				<option value="@item.AgeGroupId">@item.Name</option>
			}
		}
	</select>
</div>