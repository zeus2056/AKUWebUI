@{
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model UpdateBankModel

<div class="card">
	<div class="card-header">
		<h5 class="card-title">Banka Güncelle</h5>
	</div>
	<div class="card-body">
		<form class="forms-sample" method="post" asp-action="UpdateBank" asp-controller="Banks">
			<input type="hidden" asp-for="BankId"/>
			<div class="form-group">
				<label class="form-label" asp-for="BankName">Banka Adı</label>
				<input type="text" placeholder="Bank Name..." asp-for="BankName" class="form-control" />
				<span asp-validation-for="BankName" class="text-info mt-2"></span>
			</div>
			<div class="form-group">
				<button class="btn btn-warning w-100 text-center">
					<i class="fa fa-plus"></i>
					<span>Banka Güncelle</span>
				</button>
			</div>
		</form>
	</div>
</div>

@section Scripts{
	<partial name="~/Views/Shared/validation.cshtml"></partial>
}