@{
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model CreateBankModel

<div class="card" style="background: #fff
">
	<div class="card-header">
		<h5 class="card-title text-dark">Banka Ekle</h5>
	</div>
	<div class="card-body">
		<form class="forms-sample" method="post" asp-action="CreateBank" asp-controller="Banks">
			<div class="form-group">
				<label class="form-label" asp-for="BankName">Banka Adı</label>
				<input type="text" placeholder="Banka Adı..." asp-for="BankName" class="form-control" />
				<span asp-validation-for="BankName" class="text-info mt-2"></span>
			</div>
			<div class="form-group">
				<button class="btn btn-warning w-100 text-center">
					<i class="fa fa-plus"></i>
					<span>Banka Ekle</span>
				</button>
			</div>
		</form>
	</div>
</div>

@section Scripts{
	<partial name="~/Views/Shared/validation.cshtml"></partial>
}