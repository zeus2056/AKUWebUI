@using EntityLayer.Entities;
@using EntityLayer;

@{
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model FilteredBankModel

<div class="container">
	<form method="post" asp-action="ShowFilteredBanksRapor" asp-controller="Banks">
		<div class="text-danger" asp-validation-summary="ModelOnly"></div>
		<input type="hidden" asp-for="BankId"/>
		@if(ViewBag.Role == Rol.SuperAdmin)
		{
			<div class="form-group">
				<label class="form-label" asp-for="BranchId">Şube</label>
				<select class="form-select br" asp-for="BranchId">
					<option value="-1" disabled selected>Şube Seçiniz...</option>
					<option value="0">Hepsi</option>
					@foreach (var item in ViewBag.Branches as List<Branch>)
					{
						<option value="@item.BranchId">@item.BranchName</option>
					}
				</select>
			</div>
		}
		<div class="form-group">
			<label class="form-label" asp-for="StartDate">Başlangıç Zamanı</label>
			<input type="date" class="form-control" asp-for="StartDate"/>
		</div>
		<div class="form-group">
			<label class="form-label" asp-for="EndDate">Bitiş Zamanı</label>
			<input type="date" class="form-control" asp-for="EndDate"/>
		</div>
		<div class="form-group">
			<input type="submit" value="Pdf Çevir" formtarget="_blank" class="btn btn-primary" />
		</div>
	</form>
</div>