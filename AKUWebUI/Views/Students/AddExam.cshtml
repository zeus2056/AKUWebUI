@using EntityLayer.Entities;

@{
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model CreateStudentExam

<div class="card" style="background: #fff">
	<div class="card-header">
		<h5 class="card-title text-dark">Sınav Ekle</h5>
	</div>
	<div class="card-body">
		
		<form class="forms-sample" method="post" asp-action="AddExam" asp-controller="Students" enctype="multipart/form-data">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<input type="hidden" asp-for="StudentId"/>
			<div class="row">
				<div class="col-md-6">
					<label class="form-label" asp-for="RateId">Kur Seç</label>
					<select class="form-select" asp-for="RateId">
						<option value="0" disabled selected>Kur Seçiniz...</option>
						@foreach(var item in ViewBag.Rates as List<RateStudent>)
						{
							<option value="@item.RateId">@item.Rate.RateName - @item.Rate.Branch.BranchName</option>
						}
					</select>
					<span class="text-danger" asp-validation-for="RateId"></span>
				</div>
				<div class="col-md-6">
					<div class="form-group">
						<label class="form-label" asp-for="SuccessNote">Geçme Notu</label>
						<input type="number" min="1" max="100" step="1" class="form-control" asp-for="SuccessNote"/>
						<span class="text-danger" asp-validation-for="SuccessNote"></span>
					</div>
				</div>
				<div class="col-md-6">
					<div class="form-group">
						<label class="form-label" asp-for="ExamDate">Sınav Tarihi</label>
						<input type="date" class="form-control" asp-for="ExamDate"/>
						<span class="text-danger" asp-validation-for="ExamDate"></span>
					</div>
				</div>
				<div class="col-md-6">
					<div class="form-group">
						<label class="form-label" asp-for="ExamPath">Sınav Dosyası</label>
						<input type="file" asp-for="ExamPath" class="form-control"/>
						<span class="text-danger" asp-validation-for="ExamPath"></span>
					</div>
				</div>
			</div>
			<div class="form-group">
				<button class="btn btn-warning w-100 text-center">
					<i class="fa fa-plus"></i>
					<span>Sınav Ekle</span>
				</button>
			</div>
		</form>
	</div>

	@section Scripts{
		<partial name="~/Views/Shared/validation.cshtml"></partial>
	}
</div>