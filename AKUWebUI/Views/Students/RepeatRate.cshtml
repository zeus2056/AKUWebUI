@{
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model RepeatRateModel

<div class="card" style="background: #fff">
	<div class="card-header">
		<h5 class="card-title text-dark">Kur Tekrar</h5>
	</div>
	<div class="card-body">
		<div asp-validation-summary="ModelOnly" class="text-info"></div>
		<form class="forms-sample" method="post" asp-action="RepeatRate" asp-controller="Students">
			<div class="text-info" asp-validation-summary="ModelOnly"></div>
			<input type="hidden" asp-for="StudentId" />
			<input type="hidden" asp-for="RateId" />
			<div class="row">
				<div class="col-md-6">
					<div class="form-group">
						<label class="form-label" asp-for="StartRateDate">Kura Başlangıç Tarihi</label>
						<input type="date" asp-for="StartRateDate" class="form-control" />
						<span asp-validation-for="StartRateDate" class="text-info mt-2"></span>
					</div>
				</div>
				<div class="col-md-6 mb-3">
					@await Component.InvokeAsync("DiscountComponent")
				</div>
				<div class="form-group">
					<button class="btn btn-warning w-100 text-center">
						<i class="fa fa-plus"></i>
						<span>Kur Tekrar</span>
					</button>
				</div>
			</div>
		</form>
	</div>

	@section Scripts{
		<partial name="~/Views/Shared/validation.cshtml"></partial>
	}
</div>