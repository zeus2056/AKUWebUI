@{
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model CreateBranch

<div class="card" style="background: #fff">
	<div class="card-header">
		<h5 class="card-title text-dark">Şube Ekle</h5>
	</div>
	<div class="card-body">
		<form class="forms-sample" method="post" asp-action="CreateBranch" asp-controller="Branch">
			<div class="text-danger" asp-validation-summary="ModelOnly"></div>
			<div class="form-group">
				<label class="form-label" asp-for="BranchName">Şube Adı</label>
				<input type="text" placeholder="Şube Adı..." asp-for="BranchName" class="form-control"/>
				<span asp-validation-for="BranchName" class="text-info mt-2"></span>
			</div>
			<div class="form-group">
				<button class="btn btn-warning w-100 text-center">
					<i class="fa fa-plus"></i>
					<span>Şube Ekle</span>
				</button>
			</div>
		</form>
	</div>
</div>

@section Scripts{
	<partial name="~/Views/Shared/validation.cshtml"></partial>
}