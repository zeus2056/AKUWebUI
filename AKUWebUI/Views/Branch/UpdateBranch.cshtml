@{
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model UpdateBranch

<div class="card" style="background: #fff
">
	<div class="card-header">
		<h5 class="card-title text-dark"> @Model.BranchName - Şube Güncelle</h5>
	</div>
	<div class="card-body">
		<form class="forms-sample" method="post" asp-action="UpdateBranch" asp-controller="Branch">
			<div asp-validation-summary="All" class="text-info"></div>
			<input  type="hidden" asp-for="BranchId" />
			<div class="form-group">
				<label class="form-label" asp-for="BranchName">Şube Adı</label>
				<input type="text" placeholder="Şube Adı" asp-for="BranchName" class="form-control" />
				<span asp-validation-for="BranchName" class="text-info mt-2"></span>
			</div>
			<div class="form-group">
				<button class="btn btn-info w-100 text-center">
					<i class="fa fa-edit"></i>
					<span>Şube Güncelle</span>
				</button>
			</div>
		</form>
	</div>
</div>

@section Scripts{
	<partial name="~/Views/Shared/validation.cshtml"></partial>
}