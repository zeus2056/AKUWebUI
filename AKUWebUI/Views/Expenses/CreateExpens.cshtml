@using EntityLayer;

@{
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model CreateExpensModel

<div class="card" style="background: #fff">
	<div class="card-header">
		<h5 class="card-title text-dark">Gider Ekle</h5>
	</div>
	<div class="card-body">
		<form class="forms-sample" method="post" asp-action="CreateExpens" asp-controller="Expenses">
			<div class="text-danger" asp-validation-summary="ModelOnly"></div>
			<div class="form-group">
				<label class="form-label" asp-for="Description">Açıklama</label>
				<textarea class="form-control" asp-for="Description" placeholder="Açıklama..."></textarea>
				<span class="text-danger" asp-validation-for="Description"></span>
			</div>
			<div class="form-group">
				<label class="form-label" asp-for="ExpensDate">Tarih</label>
				<input type="date" asp-for="ExpensDate" class="form-control" />
				<span class="text-danger" asp-validation-for="ExpensDate"></span>
			</div>
			<div class="form-group">
				<label class="form-label" asp-for="Price">Fiyat</label>
				<input type="number" asp-for="Price" class="form-control" min="0" step="1"/>
				<span class="text-danger" asp-validation-for="Price"></span>
			</div>
			@if (ViewBag.Role == Rol.SuperAdmin)
			{
				<div class="form-group">
					@await Component.InvokeAsync("BranchComponent");
				</div>
			}
			<div class="form-group">
				<button class="btn btn-warning w-100 text-center">
					<i class="fa fa-plus"></i>
					<span>Gider Ekle</span>
				</button>
			</div>
		</form>
	</div>
</div>

@section Scripts{
	<partial name="~/Views/Shared/validation.cshtml"></partial>
}