@using EntityLayer.Entities;

@{
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container">
	<form method="post" asp-action="ActiveRateStudents" asp-controller="Rapors">
		<div class="text-danger" asp-validation-summary="ModelOnly" ></div>
		<div class="form-group">
			<label class="form-label" for="BranchId">Şube</label>
			<select class="form-select br" name="BranchId" id="BranchId">
				<option value="-1" disabled selected>Şube Seçiniz...</option>
				<option value="0">Hepsi</option>
				@foreach(var item in ViewBag.Branches as List<Branch>)
				{
					<option value="@item.BranchId">@item.BranchName</option>
				}
			</select>
		</div>
		<div class="form-group">
			<input type="submit" value="Pdf Çevir" formtarget="_blank" class="btn btn-primary"/>
		</div>
	</form> 
</div>