@{
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@model ChangePasswordModel


<div class="card" style="background:#fff">
	<div class="card-header text-dark">
		<h5 class="card-title">Şifre Güncelle</h5>
	</div>
	<div class="card-body">
		<div asp-validation-summary="ModelOnly" class="text-info"></div>
		<form class="forms-sample" method="post" asp-action="ChangePassword" asp-controller="Login">
			<input type="hidden" asp-for="UserId"/>
			<div class="form-group">
				<input class="form-control" type="password" placeholder="Eski Şifre" asp-for="OldPassword"/>
				<span class="text-info" asp-validation-for="OldPassword"></span>
			</div>
			<div class="form-group">
				<input class="form-control" type="password" placeholder="Yeni Şifre" asp-for="NewPassword" />
				<span class="text-info" asp-validation-for="NewPassword"></span>
			</div>
			<div class="form-group">
				<input class="form-control" type="password" placeholder="Yeni Şifre Tekrar" asp-for="ReNewPassoword" />
				<span class="text-info" asp-validation-for="ReNewPassoword"></span>
			</div>
			<div class="form-group">
				<button class="btn btn-warning w-100 text-center">Şifre Güncelle</button>
			</div>
		</form>
	</div>

</div>



@section Scripts{
	<partial name="~/Views/Shared/validation.cshtml"></partial>
	}