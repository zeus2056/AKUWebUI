@{
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@model UpdateEmailStaffModel
<div class="card" style="background: #fff">
	<div class="card-header">
		<h5 class="card-title text-dark">Email Güncelle</h5>
	</div>
	<div class="card-body">
		<form class="forms-sample" method="post" asp-action="EditEmail" asp-controller="Staffs">
			<div class="text-info" asp-validation-summary="ModelOnly"></div>
			<input type="hidden" asp-for="StaffId"/>
			<div class="form-group">
				<label class="form-label" asp-for="Email"></label>
				<input type="text" placeholder="Email" asp-for="Email" class="form-control" />
				<span asp-validation-for="Email" class="text-info mt-2"></span>
			</div>
			<div class="form-group">
				<button class="btn btn-warning w-100 text-center">
					<i class="fa fa-edit"></i>
					<span>Email Güncelle</span>
				</button>
			</div>
		</form>
	</div>
</div>

@section Scripts{
	<partial name="~/Views/Shared/validation.cshtml"></partial>
}