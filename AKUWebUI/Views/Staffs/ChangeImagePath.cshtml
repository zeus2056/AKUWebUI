@model ChangeImageModel

@{
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card" style="background: #fff
">
	<div class="card-header">
		<h5 class="card-title text-dark">Banka Ekle</h5>
	</div>
	<div class="card-body">
		<form class="forms-sample" method="post" asp-action="ChangeImagePath" asp-controller="Staffs" enctype="multipart/form-data">
			<div class="text-info" asp-validation-summary="ModelOnly"></div>
			<input type="hidden" asp-for="UserId" />
			<div class="form-group">
				<label asp-for="ImagePath" class="form-label">Resim Seçiniz</label>
				<input type="file" asp-for="ImagePath" class="form-control" />
				<span asp-validation-for="ImagePath" class="text-info mt-2"></span>
			</div>
			<div class="form-group">
				<button class="btn btn-warning w-100 text-center">
					<i class="fa fa-plus"></i>
					<span>Resim Değiştir</span>
				</button>
			</div>
		</form>
	</div>
</div>

@section Scripts{
	<partial name="~/Views/Shared/validation.cshtml"></partial>
}