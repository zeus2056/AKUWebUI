@{
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model CreateStaffPermissionModel

<div class="card" style="background: #fff">
	<div class="card-header">
		<h5 class="card-title text-dark">İzin Ekle</h5>
	</div>
	<div class="card-body">
		<form class="forms-sample" method="post" asp-action="AddPermission" asp-controller="Staffs">
			<div class="text-info" asp-validation-summary="ModelOnly"></div>
			<input type="hidden" asp-for="PermissionId"/>
			<input type="hidden" asp-for="UserId"/>
			<div class="form-group">
				<label class="form-label" asp-for="DayCount">İzin Gün Sayısı</label>
				<input type="number"asp-for="DayCount" class="form-control" min="1"  step="1" value="1"/>
				<span asp-validation-for="DayCount" class="text-info mt-2"></span>
			</div>
			<div class="form-group">
				<label class="form-label" asp-for="Date">İzin Başlangıç Tarihi</label>
				<input type="date" class="form-control" asp-for="Date"/>
				<span asp-validation-for="Date" class="text-info mt-2"></span>
			</div>
			<div class="form-group">
				<button class="btn btn-warning w-100 text-center">
					<i class="fa fa-plus"></i>
					<span>İzin Ekle</span>
				</button>
			</div>
		</form>
	</div>
</div>

@section Scripts{
	<partial name="~/Views/Shared/validation.cshtml"></partial>
}